# For a full configuration reference, see: https://grafana.com/docs/agent/latest/configuration/.
server:
  log_level: info

metrics:
  global:
    scrape_interval: 1m
  wal_directory: '/var/lib/grafana-agent'
  configs:
    - name: default
      host_filter: false
      remote_write:
        - url: {{ grafana_agent.metrics_write.url }}
      scrape_configs:
        - job_name: grafana-agent
          static_configs:
            - targets: ['127.0.0.1:{{ grafana_agent.port }}']
{% if node_exporter is defined and node_exporter.enabled | bool %}
        - job_name: node_exporter
          static_configs:
            - targets: ['127.0.0.1:{{ node_exporter.port }}']
{% endif %}
{% if promtail is defined and promtail.enabled | bool %}
        - job_name: promtail
          static_configs:
            - targets: ['127.0.0.1:{{ promtail.port }}']
{% endif %}

logs:
  configs:
  - name: default
    positions:
      filename: /tmp/positions.yaml
    clients:
      - url: {{ grafana_agent.logs_write.url | default(grafana_agent.loki_url) }}
    scrape_configs:
      - job_name: varlogs
        static_configs:
          - targets: [localhost]
            labels:
              job: varlogs
              host: {{ inventory_hostname }}
              validator_name: {{ validator_name | default('polkadot-validator') }}
              chain: {{ chain_name | default('polkadot') }}
              __path__: /var/log/*log
      - job_name: validator
        static_configs:
          - targets: [localhost]
            labels:
              job: validator
              host: {{ inventory_hostname }}
              validator_name: {{ validator_name | default('polkadot-validator') }}
              chain: {{ chain_name | default('polkadot') }}
              __path__: /var/log/polkadot.log
        pipeline_stages:
          - json:
              expressions:
                level: level
                target: target
                msg: msg
                caller: caller
                thread_name: thread_name
          - labels:
              level:
              target:
              caller:
              thread_name:
      - job_name: journal
        journal:
          json: false
          max_age: 12h
          path: /var/log/journal
          labels:
            job: systemd-journal
            host: {{ inventory_hostname }}
            validator_name: {{ validator_name | default('polkadot-validator') }}
            chain: {{ chain_name | default('polkadot') }}
        relabel_configs:
          - source_labels: ['__journal__systemd_unit']
            target_label: 'unit'
          - source_labels: ['__journal__hostname']
            target_label: 'hostname'
          - source_labels: ['__journal_priority']
            target_label: 'priority'
          - source_labels: ['__journal__journal']
            target_label: 'journal'